{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["es2018"],
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": true
  },
  "include": [
    "src/**/*",
    "types/**/*",
    "test-types.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.js"
  ]
}